<?xml version="1.0" encoding="utf-8"?>

<TableLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center_vertical"
android:stretchColumns="0,3"
tools:context="com.example.deft.myapplication222.MainActivity222"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
>

<TableRow android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="账   号："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24px"
        />
    <widget.ClearEditText
        android:id="@+id/account"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:hint="请输入账号"
        android:drawableRight="@mipmap/ic_launcher" />
</TableRow>
<TableRow android:layout_marginTop="20px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="密  码："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <widget.ClearEditText
        android:id="@+id/pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:hint="请输入密码"
        android:drawableRight="@mipmap/ic_launcher"
        android:inputType="textPassword"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</TableRow>
<TableRow android:layout_marginTop="20px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/in"
        android:text="登陆"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backcolor"
        />
    <Button
        android:id="@+id/quit"
        android:text="退出"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</TableRow>
    <TableRow android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>
    <TableRow>
        <TextView />
    </TableRow>
    <TableRow>
        <TextView />
    </TableRow>
<LinearLayout android:weightSum="1">
    <Button
        android:text="您还没有用户，需要注册吗？"
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_span="2"
        android:background="@null"/>
</LinearLayout>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/check" android:layout_column="1"/>
    </TableRow>

</TableLayout>
